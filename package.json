{
	"name": "srcds-monorepo",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"engines": {
		"node": ">=14.0.0"
	},
	"devDependencies": {
		"@types/jest": "^27.0.3",
		"@types/node": "^16.11.12",
		"jest": "^27.4.5",
		"rollup": "^2.61.1",
		"rollup-plugin-typescript2": "^0.31.1",
		"ts-jest": "^27.1.1",
		"typescript": "^4.5.4"
	},
	"scripts": {
		"prepare": "npm run rollup:build && npm run test",
		"build": "npm run rollup:build",
		"watch": "npm run rollup:watch",
		"rollup:build": "NODE_ENV=production rollup -c rollup.config.js",
		"rollup:watch": "npm run rollup:build -- -w",
		"test": "npm run test:jest && npm run test:eslint",
		"test:jest": "jest --config jest.config.json --no-cache",
		"test:eslint": "eslint --ext .ts --ignore-path .gitignore packages/*/src/**/*.ts"
	}
}
